<%= simple_form_for form, as: :session, url: session_path, html: { class: "mt-8 space-y-6", data: { turbo: false } } do |f| %>
  <%= f.input :email, 
    input_html: { autocomplete: "off", class: "flex h-9 w-full rounded-md border bg-background px-3 py-1 text-sm shadow-sm transition-colors file:border-0 file:bg-transparent file:text-sm file:font-medium focus-visible:outline-none focus-visible:ring-1 disabled:cursor-not-allowed disabled:opacity-50 border-border focus-visible:ring-ring placeholder:text-muted-foreground" },
    validate: { presence: true },
    label_html: { class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" },
    label: t("auth.email"),
    required: false
  %>
<%= f.input :password, 
  input_html: { autocomplete: "off", class: "flex h-9 w-full rounded-md border bg-background px-3 py-1 text-sm shadow-sm transition-colors file:border-0 file:bg-transparent file:text-sm file:font-medium focus-visible:outline-none focus-visible:ring-1 disabled:cursor-not-allowed disabled:opacity-50 border-border focus-visible:ring-ring placeholder:text-muted-foreground" },
  validate: { presence: true },
  label_html: { class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" },
  required: false
%>
  <div class="flex items-start">
    <%= render(RubyUI::Button.new(type: :submit) { I18n.t("auth.login") }) %>
    <a href="<%= new_password_path %>" class="ml-auto text-sm text-primary-700 hover:underline dark:text-primary-500"><%= I18n.t("auth.forgot_password") %></a>
  </div>
<% end %>
