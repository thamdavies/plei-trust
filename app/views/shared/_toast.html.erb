<% flash.each do |type, message| %>
  <div
    data-controller="notification"
    data-notification-delay-value="5000"
    class="transition transform duration-1000 z-100 hidden fixed top-[80px] right-2"
    data-transition-enter-from="opacity-0 translate-x-6"
    data-transition-enter-to="opacity-100 translate-x-0"
    data-transition-leave-from="opacity-100 translate-x-0"
    data-transition-leave-to="opacity-0 translate-x-6"
  >
    <div id="toast-message" class="bg-white flex items-center w-full max-w-xs p-4 text-gray-500 rounded-lg shadow-lg dark:text-gray-400 dark:bg-gray-800" role="alert">
      <%= render "shared/toasts/#{type}" %>
      <div class="ml-3 text-sm font-medium">
        <%= message %>
      </div>
    </div>
  </div>
<% end %>
