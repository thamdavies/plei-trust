<% if @form %>
  <%= turbo_stream.update "reduce_principal_form" do %>
    <%= render Views::Shared::Contracts::Tabs::ReducePrincipal::Form.new(contract: @contract, form: @form) %>
  <% end %>
<% else %>
  <%= turbo_stream.update "contract_show_modal" do %>
    <%= render Views::Shared::Contracts::Show.new(contract: @contract, tab: @tab) %>
  <% end %>
<% end %>

<%= turbo_stream.update "toast-notification" do %>
  <%= render "shared/toast" %>
<% end %>
