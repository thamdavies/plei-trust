<%= turbo_page_requires_reload %>
<%= content_for :title, "Quản lý chi tiêu" %>
<%= content_for :subtitle, "Quản lý chi tiêu" %>

<%= content_for :page_header_actions do %>
  <%= turbo_frame_tag "expense_form" do %>
    <%= render Views::Expenses::Form.new(form: @form) %>
  <% end %>
<% end %>

<%= render Views::Expenses::Index.new(collection: @expenses, form: @form, pagy: @pagy) %>

<% if @pagy && @pagy.pages > 1 %>
  <div class="flex justify-center py-4 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
    <%== @pagy.series_nav %>
  </div>
<% end %>

<%# Để tránh giao diện bị co lại khi bảng có ít dòng dữ liệu, các component ảnh hưởng: datetimepicker,... %>
